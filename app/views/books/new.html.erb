

<%= form_with(url: addbooks_path, local: true) do |f| %>

<%= f.label :title, "本のタイトル" %>
<%= f.text_field :title, required: true %>
<%= f.select :genre, {"小説":1, "専門書":2, "その他(一般向け学問書etc)":3}, {include_blank: "ジャンルを選択して下さい"}, {class: "form-control", required: true} %>
<%= f.select :status, {"既読":2, "未読":1}, { include_blank: "読み終えていますか？"} %>

<%= f.submit "内容を確認する" %>
<% end %>

